# --- FastAPI backend (apps/api) ---
ENVIRONMENT=development
DEBUG=true

# If true, /auth/login returns a mock code and /auth/token returns a mock user.
AUTH_USE_MOCK=false

# If true, API accepts requests without Authorization header (dev only).
DEV_AUTH_BYPASS=false

# Database
DATABASE_URL=sqlite:///./app.db

# JWT (application-issued)
SECRET_KEY=change-me-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth (Authorization Code Flow)
# Create OAuth 2.0 Client ID (Web application) in Google Cloud Console.
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
# Must match "Authorized redirect URIs" in Google Cloud Console:
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Frontend base URL used by /auth/google/callback redirect
FRONTEND_BASE_URL=http://localhost:3000

